<div class="statistic">

<h1>Лучшие имена и ники</h1>

<div class="row howmuchnicknames">
  <div class="col-sm-3 col-md-3 col-lg-3">
    <h3>WoW</h3>
    <hr>
  </div>

  <div class="col-sm-3 col-md-3 col-lg-3">
    <h3>San Andreas</h3>
    <hr>
  </div>

  <div class="col-sm-3 col-md-3 col-lg-3">
    <h3>Guild Wars 2</h3>
    <hr>
  </div>

  <div class="col-sm-3 col-md-3 col-lg-3">
    <h3>Minecraft</h3>
    <hr>
  </div>
</div>
<% cache do %>
<div class="row">
  <div class="col-sm-3 col-md-3 col-lg-3 nicknames">
 <% nicks = @statistics.where(game: "wow").last(18) %>
    <% nicks.each do |nick| %>
    <%= nick.name %>
    <br>
    <% end %>
  </div>
  <div class="col-sm-3 col-md-3 col-lg-3 nicknames">
    <% nicks = @statistics.where(game: "samp").last(18) %>
    <% nicks.each do |nick| %>
    <%= nick.name %>
    <br>
    <% end %>
  </div>
  <div class="col-sm-3 col-md-3 col-lg-3 nicknames">
    <% nicks = @statistics.where(game: "gw2").last(18) %>
    <% nicks.each do |nick| %>
    <%= nick.name %>
    <br>
    <% end %>
  </div>
  <div class="col-sm-3 col-md-3 col-lg-3 nicknames">
    <% nicks = @statistics.where(game: "minecraft").last(18) %>
    <% nicks.each do |nick| %>
    <%= nick.name %>
    <br>
    <% end %>
  </div>
</div>
<% end %>
</div>
<% content_for :title, "Статистика по самым лучшим никам" %>
<%= javascript_include_tag "statistic" %>
