         </div>
         <div class="tab-pane <%= 'active' if params[:controller] == 'gw2s' %>" id="gw2">
            <ul class="gw2">
            <% Gw2.all.each do |race| %>
            <li>
                <%= link_to(image_tag(race.game + "-"+ race.racename + ".png", :alt => race.pagename), "/gw2/" + race.racename, data: {no_turbolink: true}) %>
            </li>
                <% end %>
            </ul>
         </div>
         <div class="tab-pane <%= 'active' if params[:controller] == 'samps' %>" id="samp">
             <ul class="samp">
             <% Samp.all.each do |race| %>
             <li>
                <%= link_to(image_tag(race.game + "-" + race.racename + ".png", :alt => race.pagename), "/samp/" + race.racename, data: {no_turbolink: true}) %>
             </li>
             <% end %>
             </ul>
         </div>
